@model IEnumerable<DevIO.App.ViewModels.ProdutoViewModel>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>

            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.Imagem" alt="@item.Imagem" style="max-width: 50px; max-height: 50px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @item.Valor.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="text-right">
                <a asp-controller="Produtos" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><span class="fa fa-search" /></a>
                <a asp-controller="Produtos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><span class="fa fa-pencil-alt" /></a>
                <a asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><span class="fa fa-trash" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
